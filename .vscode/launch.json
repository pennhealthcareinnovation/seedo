  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (Attach)",
      "type": "node",
      "request": "attach",
      "localRoot": "${workspaceFolder}/server",
      "remoteRoot": "/app/server",
      "port": 9229,
      "restart": true,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/server/dist/**/*.js",
        "!**/node_modules/**"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    }
  ]
}