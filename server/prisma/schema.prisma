generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model programs {
  id        Int        @id @default(autoincrement())
  programID String     @unique(map: "programs_programid_unique") @db.VarChar(255)
  name      String     @db.VarChar(255)
  data      Json
  procedureTypes Json?
  createdAt DateTime   @db.Timestamptz(6) @default(now())
  updatedAt DateTime   @db.Timestamptz(6) @updatedAt
  trainees  trainees[]
  tasks tasks[]
}

model trainees {
  id              Int      @id @default(autoincrement())
  medhubUserId    String   @unique(map: "trainees_medhubuserid_unique") @db.VarChar(255)
  medhubProgramId String   @db.VarChar(255)
  pennId          String   @unique(map: "trainees_pennid_unique") @db.VarChar(255)
  lastName        String?  @db.VarChar(255)
  firstName       String?  @db.VarChar(255)
  data            Json?
  createdAt       DateTime @db.Timestamptz(6) @default(now())
  updatedAt       DateTime @db.Timestamptz(6) @updatedAt
  
  programs        programs @relation(fields: [medhubProgramId], references: [programID], map: "trainees_medhubprogramid_foreign")
  observations    observations[]
  ehrMetadata     traineesEhrMetadata?
}

model traineesEhrMetadata {
  id              Int       @id @default(autoincrement())
  traineeId       Int
  data            Json?
  trainee         trainees  @relation(fields: [traineeId], references: [id], map: "traineesehrmetadata_traineeid_foreign")
}

model observations {
  id              Int       @id @default(autoincrement())
  traineeId       Int
  
  // the task that created this observation
  taskId          Int
  
  // A unique EHR identifier for this event (i.e. CSN, accession, note id, procedure identifier, etc.)
  ehrObservationId String   @db.VarChar(18)
  
  type            String    @db.VarChar(255)
  date            DateTime  @db.Timestamptz(6)
  patientId       String    @db.VarChar(18)
  data            Json?
  createdAt       DateTime @db.Timestamptz(6) @default(now())
  updatedAt       DateTime @db.Timestamptz(6) @updatedAt

  // Metadata for sync to medhub
  syncId          String?   @unique() @db.VarChar(255)
  syncedAt        DateTime? @db.Timestamptz(6)
  
  trainee         trainees  @relation(fields: [traineeId], references: [id])
  task            tasks     @relation(fields: [taskId], references: [id])

  @@unique([traineeId, ehrObservationId])
}

model tasks {
  id                  Int       @id @default(autoincrement())
  programId           Int
  medhubProcedureId   String    @db.VarChar(255)
  observableType      String    @db.VarChar(255)
  args                Json?

  program             programs  @relation(fields: [programId], references: [id])
  observations        observations[]
}
